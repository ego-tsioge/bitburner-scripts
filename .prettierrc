{
    // Global settings
    "useTabs": true,
    "tabWidth": 4,
    "printWidth": 80,

    // JavaScript/NetScript settings
    "overrides": [
        {
            "files": ["*.js"],
            "options": {
                "singleQuote": true,
                "semi": true,
                "trailingComma": "es5",
                "bracketSpacing": true,
                "arrowParens": "always"
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": ["*.md"],
            "options": {
                "proseWrap": "preserve",
                "embeddedLanguageFormatting": "auto"
            }
        }
    ]
}